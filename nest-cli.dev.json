{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "builder": {
            "type": "swc",
            "options": {
                "swcrcPath": ".dev.swcrc"
            }
        },
        "assets": [{ "include": "modules/email/templates/**/*", "watchAssets": true, "outDir": "dist/" }],
        "deleteOutDir": true
    }
}
